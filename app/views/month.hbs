<div class="row">
  <section class="page-month col-xs-8 col-xs-offset-2">
    <header>
      <h1 class="title">Quick Links</h1>
      <h2 class="subtitle">{{month}}, {{year}}</h1>
    </header>
    {{#each categories}}
      <section class="link-category">
        <h1 class="title">{{title}}</h1>
        <ul class="link-category-links list-unstyled">
          {{#each bookmarks}}
            <li class="link">
              <a href="{{url}}" target="_blank">{{title}}</a>
              {{#if description}}
                <p class="link-description">{{description}}</p>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </section>
    {{/each}}
    <footer class="page-footer">
      {{#if lastMonthUrl}}
        <a href="{{lastMonthUrl}}" class="pull-left">Last month</a>
      {{/if}}
      <a href="{{archiveUrl}}">Archive</a>
      {{#if nextMonthUrl}}
        <a href="{{nextMonthUrl}}" class="pull-right">Next month</a>
      {{/if}}
    </footer>
  </section>
</div>
